<%- include('partials/head') %>
    <%- include('partials/header') %>

        <div class="container-fluid">
            <div class="row">
                <%- include('partials/nav') %>


                    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                        <div class="bg-dark text-light mt-4">

                        </div>
                        <div style="height: 90vh; overflow: auto;">
                            <table class="table mt-5">

                                <thead class="thead-dark shadow-lg  p-3" style="font-family: serif;">
                                    <tr>
                                        <th scope="col" style="position: sticky; top:30px;">S/No</th>
                                        <th scope="col" style="position: sticky; top:30px;">Name</th>
                                        <th scope="col" style="position: sticky; top:30px;">Phone</th>
                                        <th scope="col" style="position: sticky; top:30px;">Address</th>

                                    </tr>
                                </thead>



                                <tbody class="scrollable">
                                    <tr>
                                        <% data.forEach(function (item, index){ %>

                                            <tr>
                                                <td>
                                                    <%= index === 0?1:index+1 %>
                                                </td>
                                                <td>
                                                    <%= item.name %>
                                                </td>
                                                <td>
                                                    <%= item.phone %>
                                                </td>
                                                <td>
                                                    <%= item.address %>
                                                </td>


                                                <% })%>

                                            </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="row mt-1" style="position: relative; margin-bottom: 10px;">
                            <div class="col-md-12 bg-success text-light">


                                <h3>Total Item :
                                    <%=total%>



                                </h3>
                            </div>
                        </div>

                    </main>
            </div>
        </div>



        </div>
        </section>
        </div>
        </div>